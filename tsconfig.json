{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop":true,
    "removeComments": true,
    "resolveJsonModule":true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "exclude": ["node_modules", "dist"],
  "typeRoots": [
    "node_modules/@types"
  ]
}
