{
    "name": "nest-typescript-starter",
    "version": "1.0.0",
    "description": "Nest TypeScript starter repository",
    "license": "MIT",
    "directories": {
        "test": "{src,test}/"
    },
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "start": "node dist/main.js",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start:dev": "concurrently \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
        "start:debug": "nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist && npm run build",
        "start:prod": "node dist/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "mocha --reporter mochawesome --recursive --timeout 15000 --require espower-typescript/guess */**/*.test.ts",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "6.0.4",
        "@nestjs/core": "6.0.4",
        "@nestjs/microservices": "6.0.4",
        "@nestjs/platform-express": "6.1.1",
        "bluebird": "3.5.4",
        "class-transformer": "0.2.0",
        "class-validator": "0.8.1",
        "crypto-random-string": "2.0.0",
        "dotenv": "8.0.0",
        "express-rate-limit": "3.5.1",
        "helmet": "3.18.0",
        "joi": "14.3.1",
        "jsonfile": "5.0.0",
        "jsonwebtoken": "8.5.1",
        "lodash": "4.17.15",
        "log4js": "2.10.0",
        "mongoose": "5.2.0",
        "morgan": "1.9.1",
        "nodemailer": "6.3.0",
        "reflect-metadata": "0.1.13",
        "rimraf": "2.6.3",
        "rxjs": "6.4.0",
        "undefsafe": "2.0.2"
    },
    "devDependencies": {
        "@nestjs/testing": "6.1.1",
        "@types/dotenv": "6.1.1",
        "@types/express": "4.16.1",
        "@types/mocha": "5.2.6",
        "@types/mongoose": "5.5.12",
        "@types/node": "11.13.4",
        "@types/supertest": "2.0.7",
        "concurrently": "4.1.0",
        "espower-typescript": "9.0.2",
        "mocha": "6.1.4",
        "mochawesome": "3.1.2",
        "nodemon": "1.18.11",
        "power-assert": "1.6.1",
        "prettier": "1.17.0",
        "supertest": "4.0.2",
        "ts-node": "8.1.0",
        "tsconfig-paths": "3.8.0",
        "tslint": "5.16.0",
        "typescript": "3.4.3",
        "wait-on": "3.2.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            ".+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
